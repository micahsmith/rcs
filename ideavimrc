nnoremap <leader>bp :action PreviousTab<cr>
nnoremap <leader>bs :action FileStructurePopup<cr>
nnoremap <leader>ff :action SearchEverywhere<cr>

nnoremap <leader>ga :action ShowIntentionActions<cr>
nnoremap <leader>gh :action QuickJavaDoc<cr>
nnoremap <leader>gd :action GotoDeclaration<cr>
nnoremap <leader>gs :action GotoSuperMethod<cr>
nnoremap <leader>gi :action GotoImplementation<cr>
nnoremap <leader>gt :action GotoTest<cr>
nnoremap <leader>gr :action FindUsages<cr>
nnoremap <leader>gz :action ToggleDistractionFreeMode<cr>

nnoremap <leader>jj :action ReformatCode<cr>
nnoremap <leader>rn :action RenameElement<cr>

" regex
